                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <Grid Row="0">
                    <Label Content="Prénom"/>
                </Grid>
                <Grid Row="1">
                    <Label Content="Initiales"/>
                </Grid>
                <Grid Row="2">
                    <Label Content="Nom"/>
                </Grid>
                <Grid Row="3">
                    <Label Content="Nom de connexion"/>
                </Grid>
                <Grid Row="4">
                    <Label Content="Nom complet"/>
                </Grid>
                <Grid Row="5">
                    <Label Content="Nom d'affichage"/>
                </Grid>
                <Grid Row="6">
                    <Label Content="ID d'employé"/>
                </Grid>
                <Grid Row="7">
                    <Label Content="Description"/>
                </Grid>
                <Grid Row="8">
                    <Label Content="Bureau"/>
                </Grid>
                <Grid Row="9">
                    <Label Content="Numéro de téléphone"/>
                </Grid>
                <Grid Row="10">
